/**
 * Import dojo's CSS
 */
@import '../../dojo/resources/dojo.css';
@import '../../dijit/themes/claro/claro.css';
@import 'nib'

html,
body {
	height: 100%;
	margin: 0;
	padding: 0;
}

headerHeight = 40px
searchPaneHeight = 50px
blueColor = #00abfc
mobile = "(max-width: 480px)";

// CSS for widgets
.dijitButtonNode *{
	outline: none
}

// CSS for Main Page
.page {
	width: 100%
	height: 100%
	
	.header-bar {
		background: black
		height: headerHeight
		absolute top 0 left 0 right 0
	}
}

// CSS for Search Pane
.search-pane {
	background: #EFEFEF;
	absolute top headerHeight left 0 right 0
	height 70px
	transition-duration: 0.2s
	transition-property: height
	
	.search-container {
		padding:10px 20px 0px 20px;
		text-align: center
	    max-width: 500px;
    	margin: auto;
    	overflow: hidden;

		.search-box {
			width: 100%;
	    	box-sizing: border-box;
    		border-radius: 7px;
    		padding: 7px;
    		font-size: 14px
    		position:relative
    		padding-right: 25px
    		overflow: hidden
    		
    		.fa {
    			color: white;
    			position: absolute;
			    right: 0px;
			    top: 0px;
			    bottom: 0;
			    font-size: 18px;
			    padding: 7px 12px;
			    cursor: pointer;
			    background: blueColor
    		}

		}

		.buttons-container {
			float:right
			
			.dijitButton {
				margin: 0px
				
				.dijitButtonNode {
					background: transparent
				    border: none
				    color: blueColor
				    box-shadow: none
				}
			}
		}
		
		.filter-container {
			height 0px
			display: block 
			margin-top: 20px
		    text-align: left;
		    
		    .date-range-filter {
		    	padding: 0px 10px 10px 10px;
		    	
			    .label {
			    	color: #666666
			    }
		    }
		}
		.filter-container.show {
			height: 100px
		}
	}
}

.search-pane.show-filters {
	height: 170px
}

.search-pane.show-filters + .photo-pane {
	top: 210px
}


// CSS for Photo Upload Pane
.photo-pane {
	overflow: auto
	absolute top 110px left 0 right 0 bottom 0
	border-top: 1px solid blueColor;
	transition-duration: 0.2s
	transition-property: top
	
	.sorting-container {
        padding: 5px 40px 5px 0px;
	    text-align: right
	    
	    .dijitDropDownButton {
			border: 1px solid blueColor
			height: 25px
    		border-radius: 2px
			
		    .dijitButtonNode {
		    	width: 200px
		    	text-align: left
		    	background: white
			    border-radius: 2px
			    border: none
			    color: blueColor
			    box-shadow: none
			    padding-top: 4px;

			    .dijitArrowButtonInner {
			    	float: right
			    }
		    }
	    }
	}

	.photos-container{
		text-align: center
	    padding: 5px;

		img {
		    height: 150px;
	    	width: 150px;
	    	padding: 5px;
		}
	}
	
	.no-results-container {
		
		.no-results-label {
			width: 100%;
    		text-align: center;
    		display: block;
		    font-size: 20px;
    		color: #666666;
    		padding: 0px 5px;
    		box-sizing: border-box;
		}
	}
	
	.load-button-container {
		width: 100%
		text-align: center
	    height: 40px;
    	padding: 0px 0px 15px 0px;
    	
    	.dijitButton {
			border: 1px solid blueColor;
			
			.dijitButtonNode {
				height: 25px;
			    width: 200px;
			    padding-top: 6px;
			    font-size: 18px;
			    background: white;
			    border-radius: 2px;
			    border: none;
			    color: blueColor;
			    box-shadow: none
			}
		}
	}
	
	.no-results-container.hidden,
	.load-button-container.hidden{
		display: none;
	}
}

// once brower width hits a certain point,
// show smaller images
@media mobile {
	.photo-pane {
		.sorting-container {
		    padding: 5px
		}
	}
}

// CSS for Photo box
.photo {
	display: inline-block
	margin: 1px 2px
	position: relative
	
	.photo-img {
	    width: 200px;
    	height: 200px;
    	background-size: cover;
    	background-repeat: no-repeat;
	    background-position: center;
	}
	
	.photo-hover {
		absolute right 0 left 0 bottom 0
		height: 0
		overflow: hidden;
		transition-property: height
		transition-duration: 0.2s;
		color: white
		background: rgba(0, 0, 0, 0.6)
		font-size: 14px
		
		.title {
			text-align: left
		    white-space: nowrap
		    text-overflow: ellipsis
		    overflow: hidden
	        padding: 5px 5px 10px 5px;
		}
		
		.date-posted, .date-taken {
			text-align: left
			font-size: 12px
			padding: 0px 5px
		}
		
		.additonal-info {
			text-align: right
		    padding: 20px 5px 5px 5px;
			
			.fa {
				padding-left: 10px;
			}
		}
	}
}

.photo.show-details {
	.photo-hover {
	    height: 100px
		z-index: 1
	}
}

// once brower width hits a certain point,
// show smaller images
@media mobile {
	.photo {
		display: block
		border: 1px solid blueColor
		margin: 5px
		.photo-img {
		    width: 100px;
	    	height: 100px;
		}

		.photo-hover{
			display: block;
			left: 100px;
			top: 0px;
			height: auto
			background: #EDEDED;
			color:black
			
		}
	}
}

// Override dojo styles for menus
.dijitMenu.sort-menu {
	border 1px solid blueColor
	
	.dijitMenuItem {
		height 25px
	}
	
	.dijitMenuItem.dijitMenuItemHover td,
	.dijitMenuItem.dijitMenuItemActive td,
	.dijitMenuItem.dijitMenuItemSelected td {
		background blueColor
		background-image none
		color white
	}
}

// Override dojo styles for date text boxes
.claro .dijitDateTextBox.dijitComboBox.dijitTextBox {
	border: 1px solid blueColor
	border-radius: 2px 2px 0px 0px;
	width: 150px

	.dijitButtonNode {
		background white
	}
	.dijitInputField {
		padding 4px;
	}	
}

.dijitCalendarPopup {
	border: 1px solid blueColor;
	
	.dijitCalendarContainer,
	.dijitCalendarHover,
	.dijitCalendar:hover,
	.dijitCalendarActive {
		background: white
	}
	.dijitCalendarContainer,
	.dijitCalendarHover {
		background-color white
		border-radius:0px;
		.dijitCalendarBodyContainer {
			border: 1px solid blueColor;
		}
	}
}