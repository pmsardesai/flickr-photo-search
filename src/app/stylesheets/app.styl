/**
 * Import dojo's CSS
 */
@import '../../dojo/resources/dojo.css';
@import '../../dijit/themes/claro/claro.css';

html,
body {
	height: 100%;
	margin: 0;
	padding: 0;
}

.page {
	width: 100%
	height: 100%
}

// CSS for Search Pane
.search-pane {
	//width: 25%
	height: 100%
	background: grey
	display: inline-block
	vertical-align: top
	
    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0;
    width: 400px;
	
	.search-box-container {
		padding:10px 20px;
		
		.search-box {
			width: 100%;
	    	box-sizing: border-box;
    		border-radius: 3px;
    		padding: 7px;
    		font-size: 16px
		}
	}
}


// CSS for Photo Upload Pane
.photo-pane {
	//width: 74%
	height: 100%
	display: inline-block
	vertical-align: top
	overflow: auto
	
	position: absolute;
    right: 0;
    top: 0;
    left: 400px;
    bottom: 0;
	
	.photos-container{
		text-align: center

		// added after absolute position
	    padding: 5px;

		img {
		    height: 150px;
	    	width: 150px;
	    	padding: 5px;
		}
	}
	
	.load-button-container {
		width: 100%
		text-align: center
	    height: 40px;
    	padding: 0px 0px 15px 0px;
		
		.dijitButtonNode {
			height: 25px;
		    width: 200px;
		    background: #0098FF;
		    border-radius: 2px;
		    padding-top: 10px;
		    border: none;
		    
		    .dijitButtonText{
	    	    color: white;
    			font-size: 18px;
		    }
		}
	}
	
	.no-results-container.hidden{
		display: none;
	}
}