/**
 * Import dojo's CSS
 */
@import '../../dojo/resources/dojo.css';
@import '../../dijit/themes/claro/claro.css';
@import 'nib'

html,
body {
	height 100%
	margin 0
	padding 0
}

headerHeight = 70px
searchPaneHeight = 50px
blueColor = #00abfc
darkGrey = #322E2E
mobile = "(max-width: 480px)";

// CSS for widgets
.dijitButtonNode *{
	outline none
}

// *************** CSS for Main Page *************** //
.page {
	width: 100%
	height: 100%
	
	.header-bar {
		background darkGrey
		height headerHeight
		absolute top 0 left 0 right 0
		color white
		text-align right
		font-size 20px

		.info {
			display inline-block
			cursor pointer
			padding 7px 0px 7px 10px
			
			.profile-icon {
				background black
				height 50px
				width 50px
				border-radius 30px
				display inline-block
				border 3px solid white
				vertical-align top
				
				.fa {
					padding 8px 13px 0px 0px 
					color orange
					font-size 30px
				}
			}
			
			.details {
				display inline-block
				padding 8px 0px 0px 10px

				.username {
					font-size 70%
					text-align left
				}
			}
			
			.arrow {
				vertical-align top
				font-size 18px
			    padding 8px 10px 8px 4px
			}
		}
	}
}

.claro .dijitPopup {
	box-shadow none
	
	.profile-menu.dijitMenu {
		background darkGrey
		border 0px

		.dijitMenuItem {
			font-size 125%
			color white
			border 0px
			
			td {
				border-width 1px 0px 0px 0px
				border-color #898989
				
				.note {
					font-size 50%
					display block
				}

				&.dijitMenuItemIconCell {
					padding 12px 20px
					font-size 150%
					.fa {
						padding-bottom 3px
					}
				}
				&.dijitMenuArrowCell {
					padding 2px 10px
				}
			}
		}

		.dijitMenuItemHover td,
		.dijitMenuItemSelected td {
			background-image none
			background-color darkGrey
			border-color #898989
			border-width 1px 0px 0px 0px
			color white
		}
	}
}

@media mobile {
	.page .header-bar {
		.info {
			white-space nowrap
			.details  {
				.realname, .username {
					text-overflow ellipsis
				    overflow hidden
				    max-width 200px
				}
			}
		}
	}
}

// *************** CSS for Search Pane *************** //
.search-pane {
	background: #EFEFEF;
	absolute top headerHeight left 0 right 0
	height 100px
	transition-duration: 0.2s
	transition-property: height
	
	.search-container {
		padding:8px 20px 0px 20px;
		text-align: center
	    max-width: 500px;
    	margin: auto;
    	overflow: hidden;

		.search-box.dijitTextBox {
			width 100%
	    	box-sizing border-box
    		border-radius 7px
    		padding 7px
    		font-size 18px
    		position relative
    		padding-right 25px
    		overflow hidden
    		
    		.dijitInputContainer {
    			padding-right 50px
    		}
    		
    		.fa {
    			position: absolute;
    			top: 0px;
			    bottom: 0px;
			    cursor: pointer;
			    
			    &.fa-search {
			    	right: 0px;
				    font-size: 24px
				    padding: 6px 11px
		    		color: white;
				    background: blueColor;
			    }
			    &.fa-times {
				    right 40px
				    font-size 20px
				    padding 9px 14px
				    color darkGrey
				    &:hover {
				    	color #929292
				    }
    			}
    		}
		}

		.buttons-container {
			float:right
			
			.dijitButton {
				margin: 0px
				
				.dijitButtonNode {
					background: transparent
				    border: none
				    color: blueColor
				    box-shadow: none
				}
			}
		}
		
		.filter-container {
			height 0px
			display: block 
			margin-top: 20px
		    text-align: left;
		    
		    .date-range-filter {
		    	padding: 0px 10px 10px 10px;
		    	
			    .label {
			    	color: #666666
			    }
		    }
		    
		    &.show {
		    	height 100px
		    }
		}
	}
	
	.sorting-container {
        padding: 2px 40px 4px 0px;
	    text-align: right
	    border-top: 1px solid blueColor;
    	background: white;
	    
	    .dijitDropDownButton {
			border: 1px solid blueColor
			height: 25px
    		border-radius: 2px
			
		    .dijitButtonNode {
		    	width: 200px
		    	text-align: left
		    	background: white
			    border-radius: 2px
			    border: none
			    color: blueColor
			    box-shadow: none
			    padding-top: 4px;
			    
			    .dijitDownArrowButton {
			    	/*arrow in firefox does not align with text properly*/
					white-space: normal;
				    .dijitArrowButtonInner {
				    	float: right
				    }
			    }
		    }
	    }
	}
	
	&.show-filters {
		height: 200px
	}

	&.show-filters + .photo-pane {
		top 270px
	}
}

// once brower width hits a certain point,
// show smaller images
@media mobile {
	.search-pane {
		.search-container {
			padding 0px
			.search-box.dijitTextBox {
				border-radius 0px
			}

			.filter-container {
				margin-top 23px
				
				.date-range-filter{
					text-align center
					overflow hidden
				}

				.dijitDateTextBox {
					display block
					margin 0 auto
				}
				
				&.show {
					height 150px
				}
			}
		}

		.sorting-container {
		    padding-right 20px
		}
		
		&.show-filters{
			height 250px
		}
		&.show-filters + .photo-pane{
			top 320px
		}
	}
}

// *************** CSS for Photo Upload Pane *************** //
.photo-pane {
	overflow: auto
	absolute top 180px left 0 right 0 bottom 0
	transition-duration: 0.2s
	transition-property: top

	.photos-container{
		text-align: center
	    padding: 5px;

		img {
		    height: 150px;
	    	width: 150px;
	    	padding: 5px;
		}
	}
	
	.no-results-container {
		color #666
		text-align center

		.no-results-label {
			width: 100%;
    		display: block;
		    font-size: 20px;
    		padding: 0px 15px;
    		box-sizing: border-box;
		}
	}
	
	.load-button-container {
		width: 100%
		text-align: center
	    height: 40px;
    	padding: 0px 0px 15px 0px;
    	
    	.dijitButton {
			
			.dijitButtonNode {
				height: 25px;
			    width: 200px;
			    padding-top: 6px;
			    font-size: 18px;
			    background: white;
			    border-radius: 2px;
			    border: none;
			    color: blueColor;
			    box-shadow: none
			}
		}
	}
	
	.no-results-container.hidden,
	.load-button-container.hidden{
		display: none;
	}
}

// CSS for Photo box
.photo {
	display: inline-block
	margin: 1px 2px
	position: relative
	
	.photo-img {
	    width: 200px;
    	height: 200px;
    	background-size: cover;
    	background-repeat: no-repeat;
	    background-position: center;
	}
	
	.photo-hover {
		absolute right 0 left 0 bottom 0
		height: 0
		overflow: hidden;
		transition-property: height
		transition-duration: 0.2s;
		color: white
		background: rgba(0, 0, 0, 0.6)
		font-size: 14px
		
		.title {
			text-align: left
		    white-space: nowrap
		    text-overflow: ellipsis
		    overflow: hidden
	        padding: 5px 5px 10px 5px;
		}
		
		.date-posted, .date-taken {
			text-align: left
			font-size: 12px
			padding: 0px 5px
		}
		
		.additonal-info {
			text-align: right
		    padding: 17px 5px 5px 5px;
			
			.fa {
				padding-left: 10px;
			}
		}
	}
}

.photo.show-details {
	.photo-hover {
	    height: 100px
		z-index: 1
	}
}

// once brower width hits a certain point,
// show smaller images
@media mobile {
	.photo {
		display: block
		border: 1px solid blueColor
		margin: 5px
		.photo-img {
		    width: 100px;
	    	height: 100px;
		}

		.photo-hover{
			display: block;
			left: 100px;
			top: 0px;
			height: auto
			background: #EDEDED;
			color:black
			
		}
	}
}

// Override dojo styles for menus
.dijitMenu.sort-menu {
	border 1px solid blueColor
	
	.dijitMenuItem {
		height 25px
	}
	
	.dijitMenuItem.dijitMenuItemHover td,
	.dijitMenuItem.dijitMenuItemActive td,
	.dijitMenuItem.dijitMenuItemSelected td {
		background blueColor
		background-image none
		color white
	}
}

// Override dojo styles for date text boxes
.claro .dijitDateTextBox.dijitComboBox.dijitTextBox {
	border: 1px solid blueColor
	border-radius: 2px;
	width: 150px

	.dijitButtonNode {
		background white
	}
	.dijitInputField {
		padding 4px;
	}	
}

.dijitCalendarPopup {
	border: 1px solid blueColor;
	
	.dijitCalendarContainer,
	.dijitCalendarHover,
	.dijitCalendar:hover,
	.dijitCalendarActive {
		background: white
	}
	.dijitCalendarContainer,
	.dijitCalendarHover {
		background-color white
		border-radius:0px;
		.dijitCalendarBodyContainer {
			border: 1px solid blueColor;
		}
	}
}