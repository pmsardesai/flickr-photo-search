/**
 * Import dojo's CSS
 */
@import '../../dojo/resources/dojo.css';
@import '../../dijit/themes/claro/claro.css';
@import 'nib'

html,
body {
	height: 100%;
	margin: 0;
	padding: 0;
}

headerHeight = 40px
searchPaneHeight = 50px
blueColor = #00abfc

// CSS for widgets
.dijitButtonNode *{
	outline: none
}

// CSS for Main Page
.page {
	width: 100%
	height: 100%
	
	.header-bar {
		background: black
		height: headerHeight
		absolute top 0 left 0 right 0
		background black
	}
}

// CSS for Search Pane
.search-pane {
	background: #EFEFEF;
	absolute top headerHeight left 0 right 0
	height 60px
	
	.search-box-container {
		padding:10px 20px;
		text-align: center
		
		.search-box {
			width: 100%;
    		max-width: 500px;
	    	box-sizing: border-box;
    		border-radius: 7px;
    		padding: 7px;
    		font-size: 14px
    		position:relative
    		padding-right: 25px
    		overflow: hidden
    		
    		.fa {
    			color: white;
    			position: absolute;
			    right: 0px;
			    top: 0px;
			    bottom: 0;
			    font-size: 18px;
			    padding: 7px 12px;
			    cursor: pointer;
			    background: blueColor
    		}

		}
		
		.dijitButton {
			margin 0px
			.dijitButtonNode {
				background: blueColor;
			    border-radius: 2px;
			    border: none;
			    color: white;
			    box-shadow: none
			    
			    .dijitIcon {
			    	font-size: 20px;
					padding: 4px 4px 4px 11px;
			    }
			}
		}
	}
}


// CSS for Photo Upload Pane
.photo-pane {
	overflow: auto
	absolute top 100px left 0 right 0 bottom 0
	border-top: 1px solid blueColor;
	
	.sorting-container {
        padding: 5px 40px 5px 0px;
	    text-align: right
	    
	    .dijitDropDownButton {
			border: 1px solid blueColor
			height: 25px
    		border-radius: 2px
			
		    .dijitButtonNode {
		    	width: 200px
		    	text-align: left
		    	background: white
			    border-radius: 2px
			    border: none
			    color: blueColor
			    box-shadow: none
			    padding-top: 4px;

			    .dijitArrowButtonInner {
			    	float: right
			    }
		    }
	    }
	}

	.photos-container{
		text-align: center
	    padding: 5px;

		img {
		    height: 150px;
	    	width: 150px;
	    	padding: 5px;
		}
	}
	
	.load-button-container {
		width: 100%
		text-align: center
	    height: 40px;
    	padding: 0px 0px 15px 0px;
    	
    	.dijitButton {
			border: 1px solid blueColor;
			
			.dijitButtonNode {
				height: 25px;
			    width: 200px;
			    padding-top: 6px;
			    font-size: 18px;
			    background: white;
			    border-radius: 2px;
			    border: none;
			    color: blueColor;
			    box-shadow: none
			}
		}
	}
	
	.no-results-container.hidden,
	.load-more-container.hidden{
		display: none;
	}
}

// CSS for Photo box
.photo {
	display: inline-block
	margin: 1px 2px
	position: relative
	
	.photo-img {
	    width: 200px;
    	height: 200px;
    	background-size: cover;
    	background-repeat: no-repeat;
	    background-position: center;
	}
	
	.photo-hover {
		display: none
	}
}

.photo.show-details {
	.photo-hover {
		absolute right 0 left 0 bottom 0
		background: rgba(0, 0, 0, 0.6)
		display:block
	    height: 50px
		z-index: 1
		
		.title {
			text-align: left
		    white-space: nowrap
		    text-overflow: ellipsis
		    overflow: hidden
			color: white
	        padding: 5px
    		font-size: 14px
		}
		
		.additonal-info {
			color: white
			text-align: right
			font-size: 14px
			padding: 0px 5px
			
			.fa {
				padding-left: 10px;
			}
		}
	}
}


.dijitMenu.sort-menu {
	border 1px solid blueColor
	
	.dijitMenuItem {
		height 25px
	}
	
	.dijitMenuItem.dijitMenuItemHover td,
	.dijitMenuItem.dijitMenuItemActive td,
	.dijitMenuItem.dijitMenuItemSelected td {
		background blueColor
		background-image none
		color white
	}
}